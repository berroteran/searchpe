<?xml version="1.0" encoding="UTF-8"?>
<job id="update_database" restartable="true" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/jobXML_1_0.xsd"
     version="1.0">

    <flow id="start">
        <step id="importStep" next="closeVersionStep">
            <chunk item-count="120">
                <reader ref="csvItemReader">
                    <properties>
                        <property name="resource" value="#{jobParameters['resource']}"/>
                        <property name="preference" value="STANDARD_PREFERENCE"/>
                        <property name="delimiterChar" value="|"/>
                        <property name="beanType" value="io.searchpe.model.Company"/>
                        <property name="nameMapping" value="ruc,razonSocial,estadoContribuyente,condicionDomicilio,ubigeo,tipoVia,nombreVia,codigoZona,tipoZona,numero,interior,lote,departamento,manzana,kilometro"/>
                        <property name="cellProcessors" value="
                        NotNull;
                        NotNull,Truncate(255);
                        NotNull,Truncate(30);
                        NotNull,Truncate(30);
                        NotNull;
                        NotNull,Truncate(30);
                        NotNull,Truncate(100);
                        NotNull,Truncate(30);
                        NotNull,Truncate(30);
                        NotNull,Truncate(30);
                        NotNull,Truncate(30);
                        NotNull,Truncate(30);
                        NotNull,Truncate(30);
                        NotNull,Truncate(30);
                        null,Truncate(30);
                        null,Truncate(30);"/>
                        <property name="skipBeanValidation" value="true"/>
                        <property name="charset" value="ISO-8859-1"/>
                        <property name="quoteChar" value="^"/>
                    </properties>
                </reader>
                <writer ref="jpaCompanyItemWriter">
                    <properties>
                        <property name="versionId" value="#{jobParameters['versionId']}"/>
                    </properties>
                </writer>
                <skippable-exception-classes>
                    <include class="java.lang.RuntimeException"/>
                </skippable-exception-classes>
            </chunk>
        </step>
        <step id="closeVersionStep" next="purgeVersionsStep">
            <batchlet ref="closeVersionBatchlet">
                <properties>
                    <property name="versionId" value="#{jobParameters['versionId']}"/>
                </properties>
            </batchlet>
        </step>
        <step id="purgeVersionsStep" next="deleteExpiredVersionsStep">
            <batchlet ref="purgeVersionsBatchlet"/>
        </step>
        <step id="deleteExpiredVersionsStep">
            <batchlet ref="expiredVersionsBatchlet">
                <properties>
                    <property name="maxVersions" value="#{jobParameters['maxVersions']}"/>
                </properties>
            </batchlet>
        </step>
        <end on="COMPLETED"/>
    </flow>
</job>