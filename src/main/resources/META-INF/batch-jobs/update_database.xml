<?xml version="1.0" encoding="UTF-8"?>
<job id="update_database" restartable="true" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/jobXML_1_0.xsd"
     version="1.0">

    <flow id="start" next="end">
        <step id="cleanTempFilesBefore" next="deleteIncompleteVersionsBefore">
            <batchlet ref="cleanFilesBatchlet">
                <properties>
                    <property name="files" value="#{jobParameters['sunatZipFileName']},#{jobParameters['sunatUnzipFileName']}"/>
                </properties>
            </batchlet>
        </step>
        <step id="deleteIncompleteVersionsBefore" next="deleteExpiredVersionsBefore">
            <batchlet ref="deleteIncompleteVersionsBatchlet">
                <properties>
                    <property name="deleteIncompleteVersions" value="#{jobParameters['deleteIncompleteVersions']}"/>
                </properties>
            </batchlet>
        </step>
        <step id="deleteExpiredVersionsBefore" next="downloadFile">
            <batchlet ref="deleteExpiredVersionsBatchlet">
                <properties>
                    <property name="expirationTimeInMillis" value="#{jobParameters['expirationTimeInMillis']}"/>
                </properties>
            </batchlet>
        </step>
        <step id="downloadFile" next="unzipFile">
            <batchlet ref="downloadFileBatchlet">
                <properties>
                    <property name="url" value="#{jobParameters['sunatZipURL']}"/>
                    <property name="output" value="#{jobParameters['sunatZipFileName']}"/>
                </properties>
            </batchlet>
        </step>
        <step id="unzipFile" next="import">
            <batchlet ref="unzipFileBatchlet">
                <properties>
                    <property name="fileLocation" value="#{jobParameters['sunatZipFileName']}"/>
                    <property name="sunatUnzipFileName" value="#{jobParameters['sunatUnzipFileName']}"/>
                </properties>
            </batchlet>
        </step>
        <step id="import" next="cleanTempFilesAfter">
            <listeners>
                <listener ref="txtListener"/>
            </listeners>
            <chunk item-count="100">
                <reader ref="txtReader">
                    <properties>
                        <property name="charsetName" value="#{jobParameters['sunatTxtCharset']}"/>
                        <property name="skip" value="#{jobParameters['sunatTxtRowSkips']}"/>
                        <property name="fileLocation" value="#{jobParameters['sunatUnzipFileName']}"/>
                    </properties>
                </reader>
                <processor ref="txtProcessor">
                    <properties>
                        <property name="regex" value="#{jobParameters['sunatTxtColumnSplitRegex']}"/>
                        <property name="header" value="#{jobParameters['sunatTxtHeadersTemplate']}"/>
                        <property name="headerColumns" value="#{jobParameters['sunatModelHeadersTemplate']}"/>
                    </properties>
                </processor>
                <writer ref="txtWriter"/>
            </chunk>
        </step>
        <step id="cleanTempFilesAfter" next="deleteIncompleteVersionsAfter">
            <batchlet ref="cleanFilesBatchlet">
                <properties>
                    <property name="files" value="#{jobParameters['sunatZipFileName']},#{jobParameters['sunatUnzipFileName']}"/>
                </properties>
            </batchlet>
        </step>
        <step id="deleteIncompleteVersionsAfter" next="deleteExpiredVersionsAfter">
            <batchlet ref="deleteIncompleteVersionsBatchlet">
                <properties>
                    <property name="deleteIncompleteVersions" value="#{jobParameters['deleteIncompleteVersions']}"/>
                </properties>
            </batchlet>
        </step>
        <step id="deleteExpiredVersionsAfter">
            <batchlet ref="deleteExpiredVersionsBatchlet">
                <properties>
                    <property name="expirationTimeInMillis" value="#{jobParameters['expirationTimeInMillis']}"/>
                </properties>
            </batchlet>
        </step>
    </flow>
    <step id="end">
        <batchlet ref="endBatchlet"/>
        <end on="COMPLETED"/>
    </step>
</job>