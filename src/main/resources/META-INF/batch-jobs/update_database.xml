<?xml version="1.0" encoding="UTF-8"?>
<job id="update_database" restartable="true" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/jobXML_1_0.xsd"
     version="1.0">

    <flow id="start" next="end">
        <step id="import" next="closeVersionStep">
            <chunk item-count="100">
                <reader ref="csvItemReader">
                    <properties>
                        <property name="resource" value="#{jobParameters['resource']}"/>
                        <property name="preference" value="STANDARD_PREFERENCE"/>
                        <property name="delimiterChar" value="|"/>
                        <!--<property name="quoteChar" value="'"/>-->
                        <property name="beanType" value="io.searchpe.model.Company"/>
                        <!--<property name="nameMapping" value="RUC,NOMBRE O RAZÓN SOCIAL,ESTADO DEL CONTRIBUYENTE,CONDICIÓN DE DOMICILIO,UBIGEO,TIPO DE VÍA,NOMBRE DE VÍA,CÓDIGO DE ZONA,TIPO DE ZONA,NÚMERO,INTERIOR,LOTE,DEPARTAMENTO,MANZANA,KILÓMETRO"/>-->
                        <property name="nameMapping" value="ruc,razonSocial,estadoContribuyente,condicionDomicilio,ubigeo,tipoVia,nombreVia,codigoZona,tipoZona,numero,interior,lote,departamento,manzana,kilometro"/>
                        <property name="cellProcessors" value="
                        null;
                        null;
                        null;
                        null;
                        null;
                        null;
                        null;
                        null;
                        null;
                        null;
                        null;
                        null;
                        null;
                        null;
                        null;
                        null;"/>
                        <property name="skipBeanValidation" value="true"/>
                    </properties>
                </reader>
                <!--<processor ref="txtProcessor">-->
                    <!--<properties>-->
                        <!--<property name="versionId" value="#{jobParameters['versionId']}"/>-->
                    <!--</properties>-->
                <!--</processor>-->
                <writer ref="txtWriter">
                    <properties>
                        <property name="versionId" value="#{jobParameters['versionId']}"/>
                    </properties>
                </writer>
            </chunk>
        </step>
        <step id="closeVersionStep" next="purgeVersions">
            <batchlet ref="closeVersion">
                <properties>
                    <property name="versionId" value="#{jobParameters['versionId']}"/>
                </properties>
            </batchlet>
        </step>
        <step id="purgeVersions">
            <batchlet ref="purgeVersionsBatchlet">
                <properties>
                    <property name="deleteIncompleteVersions" value="#{jobParameters['deleteIncompleteVersions']}"/>
                </properties>
            </batchlet>
        </step>
    </flow>
    <step id="end">
        <batchlet ref="endBatchlet"/>
        <end on="COMPLETED"/>
    </step>
</job>