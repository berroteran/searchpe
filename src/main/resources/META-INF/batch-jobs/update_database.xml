<?xml version="1.0" encoding="UTF-8"?>
<job id="update_database" restartable="true" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/jobXML_1_0.xsd"
     version="1.0">

    <flow id="start" next="end">
        <step id="cleanTempFilesBefore" next="purgeIncompleteVersions1">
            <batchlet ref="cleanFilesBatchlet">
                <properties>
                    <property name="files" value="#{jobParameters['downloadFileLocation']},#{jobParameters['unzipFileLocation']}"/>
                </properties>
            </batchlet>
        </step>
        <step id="purgeIncompleteVersions1" next="downloadFile">
            <batchlet ref="purgeIncompleteVersionsBatchlet">
                <properties>
                    <property name="purgeIncompleteVersions" value="#{jobParameters['purgeIncompleteVersions']}"/>
                </properties>
            </batchlet>
        </step>
        <step id="downloadFile" next="unzipFile">
            <batchlet ref="downloadFileBatchlet">
                <properties>
                    <property name="url" value="#{jobParameters['databaseURL']}"/>
                    <property name="output" value="#{jobParameters['downloadFileLocation']}"/>
                </properties>
            </batchlet>
        </step>
        <step id="unzipFile" next="import">
            <batchlet ref="unzipFileBatchlet">
                <properties>
                    <property name="fileLocation" value="#{jobParameters['downloadFileLocation']}"/>
                    <property name="unzipFileLocation" value="#{jobParameters['unzipFileLocation']}"/>
                </properties>
            </batchlet>
        </step>
        <step id="import" next="cleanTempFilesAfter">
            <listeners>
                <listener ref="txtListener">
                    <properties>
                        <property name="entityManagerLookupName" value="java:app/SearchpeEM"/>
                    </properties>
                </listener>
            </listeners>
            <chunk item-count="100">
                <reader ref="txtReader">
                    <properties>
                        <property name="charsetName" value="#{jobParameters['fileCharset']}"/>
                        <property name="skip" value="#{jobParameters['fileRowSkip']}"/>
                        <property name="fileLocation" value="#{jobParameters['unzipFileLocation']}"/>
                    </properties>
                </reader>
                <processor ref="txtProcessor">
                    <properties>
                        <property name="regex" value="#{jobParameters['fileColumnSeparator']}"/>
                        <property name="header" value="#{jobParameters['fileColumnHeaders']}"/>
                        <property name="headerColumns" value="#{jobParameters['fileColumnValues']}"/>
                    </properties>
                </processor>
                <writer ref="txtWriter"/>
            </chunk>
        </step>
        <step id="cleanTempFilesAfter" next="purgeIncompleteVersions2">
            <batchlet ref="cleanFilesBatchlet">
                <properties>
                    <property name="files" value="#{jobParameters['downloadFileLocation']},#{jobParameters['unzipFileLocation']}"/>
                </properties>
            </batchlet>
        </step>
        <step id="purgeIncompleteVersions2" next="deleteExpiredVersions">
            <batchlet ref="purgeIncompleteVersionsBatchlet">
                <properties>
                    <property name="deleteIncompleteVersions" value="#{jobParameters['purgeIncompleteVersions']}"/>
                </properties>
            </batchlet>
        </step>
        <step id="deleteExpiredVersions">
            <batchlet ref="deleteExpiredVersionsBatchlet">
                <properties>
                    <property name="deleteComplete" value="#{jobParameters['expirationTimeInMillis']}"/>
                </properties>
            </batchlet>
        </step>
    </flow>
    <step id="end">
        <batchlet ref="endBatchlet"/>
        <end on="COMPLETED"/>
    </step>
</job>